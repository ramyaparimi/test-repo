name: Close issue on adding invalid label

on:
  issues:
    types: [labeled]

jobs:
  close-on-label:
    if: ${{ github.event.label.name == 'invalid' }}
    runs-on: ubuntu-latest
    
    steps:
      - uses: actions/github-script@v4
          with:
            github-token: ${{ secrets.PERSONAL_ACCESS_TOKEN }}
        close-issue: true
        
           
  
