name: Close issue on adding invalid label

on:
  issues:
    types: [labeled]

jobs:
  close-on-label:
    if: ${{ github.event.label.name == 'invalid' }}
    runs-on: ubuntu-latest
    
    steps:
      - name: Close issue
        env:
          GITHUB_TOKEN: ${{ secrets.PERSONAL_ACCESS_TOKEN }}
        run: gh close issue ${{ github.event.number }}
        
           
  
